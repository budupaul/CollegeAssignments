<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0"
            prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="view.gui.MainWindowController">
    <center>
        <VBox prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
            <children>
                <HBox prefHeight="90.0" prefWidth="600.0">
                    <children>
                        <VBox prefHeight="90.0" prefWidth="300.0">
                            <children>
                                <TextField fx:id="programStatesTitle" disable="true" text="Program States (0)"/>
                                <ListView fx:id="programStates" onMouseClicked="#handleUpdateProgramState"
                                          prefHeight="63.0" prefWidth="300.0"/>
                            </children>
                        </VBox>
                        <GridPane prefHeight="90.0" prefWidth="300.0">
                            <columnConstraints>
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                            </rowConstraints>
                            <children>
                                <Button fx:id="runOneStepButton" mnemonicParsing="false" onAction="#handleRunOneStep"
                                        prefHeight="27.0" prefWidth="200.0" text="Run one step" textAlignment="CENTER"
                                        GridPane.halignment="CENTER" GridPane.rowIndex="3"
                                        GridPane.valignment="CENTER"/>
                                <Button fx:id="chooseExampleButton" mnemonicParsing="false"
                                        onAction="#handleChooseExample" prefHeight="27.0" prefWidth="200.0"
                                        text="Choose example" textAlignment="CENTER" GridPane.halignment="CENTER"
                                        GridPane.rowIndex="1" GridPane.valignment="CENTER"/>
                            </children>
                        </GridPane>
                    </children>
                </HBox>
                <HBox prefHeight="150.0" prefWidth="600.0">
                    <children>
                        <GridPane prefHeight="150.0" prefWidth="600.0">
                            <columnConstraints>
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints maxHeight="86.0" minHeight="10.0" prefHeight="25.0" vgrow="SOMETIMES"/>
                                <RowConstraints maxHeight="125.0" minHeight="10.0" prefHeight="125.0"
                                                vgrow="SOMETIMES"/>
                            </rowConstraints>
                            <children>
                                <TableView fx:id="heapBox" prefHeight="200.0" prefWidth="200.0" GridPane.rowIndex="1">
                                    <columns>
                                        <TableColumn fx:id="heapKey" prefWidth="75.0" text="Key"/>
                                        <TableColumn fx:id="heapValue" prefWidth="75.0" text="Value"/>
                                    </columns>
                                </TableView>
                                <ListView fx:id="outputBox" prefHeight="200.0" prefWidth="200.0"
                                          GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                                <TableView fx:id="fileTableBox" prefHeight="200.0" prefWidth="200.0"
                                           GridPane.columnIndex="2" GridPane.rowIndex="1">
                                    <columns>
                                        <TableColumn fx:id="fileTableKey" prefWidth="75.0" text="Key"/>
                                        <TableColumn fx:id="fileTableValue" prefWidth="75.0" text="Value"/>
                                    </columns>
                                </TableView>
                                <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Heap" textAlignment="CENTER"
                                      wrappingWidth="200.0"/>
                                <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Output" textAlignment="CENTER"
                                      wrappingWidth="200.0" GridPane.columnIndex="1"/>
                                <Text strokeType="OUTSIDE" strokeWidth="0.0" text="File Table" textAlignment="CENTER"
                                      wrappingWidth="200.0" GridPane.columnIndex="2"/>
                            </children>
                        </GridPane>
                    </children>
                </HBox>
                <HBox prefHeight="150.0" prefWidth="600.0">
                    <children>
                        <GridPane prefHeight="150.0" prefWidth="600.0">
                            <columnConstraints>
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints maxHeight="71.0" minHeight="10.0" prefHeight="20.0" vgrow="SOMETIMES"/>
                                <RowConstraints maxHeight="130.0" minHeight="10.0" prefHeight="130.0"
                                                vgrow="SOMETIMES"/>
                            </rowConstraints>
                            <children>
                                <ListView fx:id="executionStackBox" prefHeight="150.0" prefWidth="300.0"
                                          GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                                <TableView fx:id="symbolTableBox" prefHeight="150.0" prefWidth="300.0"
                                           GridPane.rowIndex="1">
                                    <columns>
                                        <TableColumn fx:id="symbolTableKey" prefWidth="75.0" text="Key"/>
                                        <TableColumn fx:id="symbolTableValue" prefWidth="75.0" text="Value"/>
                                    </columns>
                                </TableView>
                                <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Symbol Table" textAlignment="CENTER"
                                      wrappingWidth="300.0"/>
                                <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Execution Stack"
                                      textAlignment="CENTER" wrappingWidth="300.0" GridPane.columnIndex="1"/>
                            </children>
                        </GridPane>
                    </children>
                </HBox>
            </children>
        </VBox>
    </center>
</BorderPane>
